<h1>Lista de Aereas</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Abrevicion</th>
  </tr>

<% @areas.each do |area| %>
  <tr>
    <td><%=h area.nombre %></td>
    <td><%=h area.abrevicion %></td>
    <td><%= link_to 'Ver', area %></td>
    <td><%= link_to 'Editar', edit_area_path(area) %></td>
    <td><%= link_to 'Eliminar', area, :confirm => 'Esta Seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Area', new_area_path %>